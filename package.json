{
  "name": "react-chap-app-server",
  "version": "1.0.0",
  "description": "The Node Express Server for React Chat Application",
  "scripts": {
    "start": "npm run server:prod && npm run client:prod",
    "client": "cd client && npm start",
    "server:prod": "node server.js",
    "client:prod": "cd client && npm run build",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@pusher/chatkit-server": "^0.12.2",
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.18.5"
  }
}
